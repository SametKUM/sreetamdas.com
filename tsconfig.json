{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": "src",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es5",
		"paths": {
			"@/*": ["./*"],
			"@/public/*": ["../public/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": ["node_modules", "public", "supabase"],
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts",
		"mdx-components.tsx"
	],
	"mdx": {
		"plugins": ["remark-gfm", "remark-slug", ["remark-toc", { "tight": true }]]
	}
}
